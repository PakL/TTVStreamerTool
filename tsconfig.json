{
	"compilerOptions": {
		"lib": ["es2020", "dom"],
		"module": "commonjs",
		"target": "es2019",
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"esModuleInterop": true,
		"paths": {
			"*": ["node_modules/*"]
		},
		"removeComments": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*"
	]
}